generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ProjectStatus {
  ACTIVE
  IN_PROGRESS
  ARCHIVED
}

enum PublishStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model AdminUser {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  passwordHash String
  role         String   @default("admin")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Project {
  id               String         @id @default(cuid())
  title            String
  slug             String         @unique
  shortDescription String
  content          String
  techStack        Json
  tags             Json
  thumbnailUrl     String?
  bannerUrl        String?
  githubUrl        String?
  liveUrl          String?
  category         String
  status           ProjectStatus  @default(ACTIVE)
  isFeatured       Boolean        @default(false)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String
  icon        String?
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Testimonial {
  id        String   @id @default(cuid())
  client    String
  role      String?
  company   String?
  quote     String
  rating    Int?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BlogPost {
  id            String         @id @default(cuid())
  title         String
  slug          String         @unique
  excerpt       String?
  content       String
  tags          Json
  featuredImage String?
  publishedAt   DateTime?
  status        PublishStatus  @default(DRAFT)
  seoTitle      String?
  seoDescription String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model TeamMember {
  id           String   @id @default(cuid())
  name         String
  role         String
  bio          String
  skills       Json
  avatarUrl    String?
  linkedinUrl  String?
  githubUrl    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model SiteSettings {
  id            Int      @id @default(1)
  siteTitle     String   @default("Portfolio Agency")
  tagline       String?
  contactEmail  String?
  socialLinks   Json
  logoUrl       String?
  faviconUrl    String?
  footerText    String?
  theme         String   @default("light")
  updatedAt     DateTime @updatedAt

  @@map("site_settings")
}

model MediaAsset {
  id         String   @id @default(cuid())
  filename   String
  url        String
  mimeType   String
  size       Int
  uploadedBy String?
  createdAt  DateTime @default(now())
}


